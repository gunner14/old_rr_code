<li class="pv-one-friend pv-one-friend-new" id="pv-recommFriend_{{ID}}" data-type="{{TYPE_VALUE}}">
	<span class="pv-friend-picbox">
		<a data-type="{{TYPE_VALUE}}" data-id="{{ID}}" namecard="{{ID}}" class="pv-userhead" href="http://www.renren.com/profile.do?id={{ID}}" target="_blank"><img width="50" height="50" src="{{TINY_URL}}" alt="" /></a>
	</span>
	<span class="pv-friend-handlebox">
		<a class="pv-friend-name" data-type="{{logType}}"  data-id="{{ID}}" namecard="{{ID}}"  href="http://www.renren.com/profile.do?id={{ID}}" target="_blank">{{NAME}}</a>
		<a class="pv-addfriend-act" data-url="{{TINY_URL}}" data-type="{{TYPE_VALUE}}" data-id="{{ID}}" data-name="{{NAME}}" href="javascript:;">好友</a>
	</span>
	<a data-type="{{TYPE_VALUE}}" data-id="{{ID}}" class="pv-friend-tohide" href="javascript:;" title="不再推荐此人"></a>
</li>
