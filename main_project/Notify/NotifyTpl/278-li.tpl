<li class="request">
	<div class="figure">
		<a target="_blank" href="http://renren.com/profile.do?id={{host}}">
			<img src="{{headUrl}}">
		</a>
	</div>
	<div class="poke">
		<span class="poke-text">
			<a href="http://renren.com/profile.do?id={{host}}">{{name}}</a> {{content}}
			<img src="http://a.xnimg.cn/imgpro/poke/pokeact_{{type}}.gif" alt="" />
		</span>
		<span class="poke-time">{{time}}</span>
		<span class="poke-reply"><a href="javascript:;" click="poke_reply:{{host}}">回复</a></span>
	</div>
</li>
